/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin:50rpx;
     
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
       
}

.userinfo-nickname {
  padding-top: 30rpx;
  color: #aaa;     
}

/**双语资讯那一栏，每个小新闻的整个包裹块*/
.unit{
  margin-bottom: 5rpx;
  font-size:28rpx;
    display: flex;
   flex-direction:row;
   flex-wrap:nowrap;
   justify-content:center;
}

/***双语资讯那一栏，左右分块的写法**/
.left{
  width:250rpx;
  height:150rpx;
  margin:10rpx;
  overflow:hidden;
  border: 1px solid black;
}
.right{
  margin-top:12rpx;
  margin-left:20rpx;
  margin-right:20rpx;
  margin-bottom: 10rpx;
  height:156rpx;
  width:450rpx;
  overflow: hidden;

}

/**右边一块上，下的写法**/
.up{   

  line-height: 150%;
  color:#666;    
  padding:5rpx;
  padding-bottom:15rpx;
  height:89rpx;
  overflow: hidden;
  border-bottom: 1px solid #ccc;
}
.down{

  color:#666;
  margin-top: 16rpx;
  margin-bottom:8rpx;
  height:62rpx;
  overflow: hidden;

}

image{
  width:230rpx;
  height:150rpx;
}

