/**app.wxss**/

/**包裹整个页面的view**/
.container {
margin-top: 180rpx;
padding-top: 18rpx;
min-height: 1200rpx;
} 

.fall {
margin-top: 180rpx;
padding-top: 50rpx;
z-index:99;
} 
/**查词框框**/
.input{
  padding: 30rpx;
  margin: 30rpx;
  border-radius:15rpx;
  text-align: center;
  background-color:#fff;
  font-family: "arial","times","courier";
}

/**顶端蓝色的边框**/
#topSearch{
  position: fixed;
  top: -1rpx;
  width:98%;
  height:180rpx;
  background-color: #4189de;
  padding:10rpx;
  z-index: 10;      
}
/**每日一句中中英文的样式*/
.textbox{
  line-height: 100rpx;
  height:110rpx;
  border-bottom:1rpx solid #ebebeb;
  color:#333;
  padding:15rpx;
  
  z-index: 0;
  font-size:32rpx;
  font-family: "arial","times","courier";
  overflow: hidden;
}

/**最普通的给页面分块的box**/
.box{
  padding: 30rpx;
  z-index:1;  
  border-bottom:20rpx solid #f1eff2;
  
}
/**聚焦在输入页面时可以把搜索状态叉掉**/
#searchPos{
  position:fixed;
  padding: 30rpx;
  margin-top:30rpx;
  margin-left:200rpx;
  margin-bottom: 30rpx;
  z-index:100;
}
#searchCancel{
  position:fixed;
  padding: 30rpx;
  margin-top:30rpx;
  margin-left:600rpx;
  margin-bottom: 30rpx;
  z-index:100;
}
/**双语例句*/
.sentence-en{
  font-size:32rpx;
}
.sentence-cn{
  font-size:28rpx;
  color:#666;
}

/**控制顶端搜索词语结果的大块**/
#searchResult{
  opacity: 0.95;
  position: fixed;
  min-height:700rpx;
  max-height: 700rpx;
  width:100%;
  background-color:#fff;
  z-index:8;
}

/**每一个显示结果的一个小条目**/
.item{
  display: flex;
  height:130rpx;
  border:1px solid #eee;
}

/**左边的显示格式**/
.searchLeft{
  width:340rpx;
  margin:22rpx;
  margin-left:40rpx;
  margin-right:0px;
  font-size:36rpx;
  line-height: 125%;
  overflow:hidden;
}
/**右的显示格式**/
.searchRight{
  font-size:32rpx;
  margin:22rpx;
  line-height:150%;
  width:380rpx;
  overflow:hidden;
  color:#666;
}

.linedown{
  color:#aaa;
  margin-top:30rpx;
  margin-left: 2rpx;
  margin-right: 2rpx;
  
  padding-bottom: 30rpx;
  border-bottom:1rpx solid #ebebeb;
}

.bottom-note{
  text-align: center;
  color:#aaa;
  border: 30rpx solid #f1eff2;
  background-color:#f1eff2;
}

.massive{
  font-size:84rpx;
}
.huge{
  font-size: 64rpx;
}
.large{
  font-size: 48rpx;
}
.big{
  font-size: 40rpx;
}

.medium{
  font-size:36rpx;
}
.small{
  font-size:32rpx;
}
.tiny{
  font-size:24rpx;
}
.show{
  transition-duration: 1s;
  display: block;
}
.hide{
  transition-duration: 1s;
  display: none;
}