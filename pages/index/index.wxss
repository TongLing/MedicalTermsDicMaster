/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding:80rpx;
   
  border-bottom:20rpx solid #f1eff2;

}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
       
}

.userinfo-nickname {
  padding-top: 30rpx;
  color: #aaa;     
}
.wrapper{
  display:flex;
  flex-direction:row;
  flex-wrap:wrap;
  justify-content:center;
}

/**双语资讯那一栏，每个小新闻的整个包裹块*/
.unit{
  font-size:28rpx;
    display: flex;
   flex-direction:row;
   flex-wrap:nowrap;
   justify-content:center;
   
}

/***双语资讯那一栏，左右分块的写法**/
.keyword{
  width:225rpx;
  height:140rpx;
  border-left: 1rpx solid #ebebeb;
  border-right: 1rpx solid #ebebeb;
  border-bottom: 1rpx solid #ebebeb;
  text-align: center; 
  line-height:140rpx;
}

.more{

  margin-top:30rpx;
  margin-left:20rpx;
  margin-right:20rpx;
  margin-bottom: 30rpx;
  color:#999;
}
.change{
  
  margin-top:30rpx;
  margin-left:20rpx;
  margin-right:20rpx;
  margin-bottom: 30rpx;
  color:#999;
}
